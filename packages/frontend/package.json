{
  "name": "@frontend/app",
  "version": "1.0.0",
  "main": "src/scripts/index.tsx",
  "scripts": {
    "watch": "cross-env NODE_ENV=development webpack-dev-server --open --config ../../webpack/webpack.frontend.config.js",
    "build": "cross-env NODE_ENV=production webpack --mode production --config ../../webpack/webpack.frontend.config.js",
    "watch:SSR": "cross-env NODE_ENV=development OPTION=SSR webpack --watch --config ../../webpack/webpack.backend.config.js",
