    "packages": "yarn install"
  },
  "dependencies": {
    "axios": "0.19.0",
    "node-sass": "^4.14.1",
    "normalize.css": "8.0.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-intl": "3.12.0",
    "sass-loader": "^8.0.2"
  },
  "devDependencies": {
    "@babel/preset-react": "7.8.3",
    "@types/react": "16.9.0",
    "@types/react-dom": "16.9.0",
    "css-loader": "3.4.2",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.9.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "style-loader": "1.1.2",
    "webpack-dev-server": "3.10.1"
  }
